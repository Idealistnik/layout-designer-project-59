DOCTYPE(html)
html(lang='en')
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  title layout-designer-project-56
  link(rel='stylesheet' href='./styles/app.css')
  link(rel='stylesheet' href='../node_modules/bootstrap/scss/bootstrap')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
 
body
  div.container-new-xxl.min-vh-100.bg-gray.p-4
    div.row.m-0.bg-white.rounded-4
      section.col-md-4.border-end.border-gray.px-0
        header.bg-primary.rounded-left-top    
          nav     
            div.nav.nav-tabs(id='nav-tab' role='tablist')
              //- justify-content-between.align-items-center
              //- button.nav-link(id='logo' data-bs-toggle="tab" data-bs-target="#nav-disabled" type="button" role="tab" aria-controls="nav-disabled" aria-selected="false" disabled)
              //-   img(src='../app/images/logo.svg' width=25 height=40 alt='')
              img(src='../app/images/logo.svg' width=25 height=40 alt='')
              button.nav-link.p-0.link-light.active(id='nav-contacts' data-bs-toggle='tab' data-bs-target='#nav-contacts' type='button' role='tab' aria-controls='nav-contacts' aria-selected='true')
                img(src='../app/images/people.svg' width=25 height=25 alt='').me-2
                small Контакты        
                
              button.nav-link.p-0.link-light(id='nav-chats' data-bs-toggle='tab' data-bs-target='#nav-chats' type='button' role='tab' aria-controls='nav-chats' aria-selected='false') 
                img(src='../app/images/chat.svg' width=25 height=25 alt='').me-2
                small Сообщения              
                
              button.nav-link.p-0.link-light(id='nav-profile' data-bs-toggle='tab' data-bs-target='#nav-profile' type='button' role='tab' aria-controls='nav-profile' aria-selected='false')
                img(src='../app/images/person.svg' width=25 height=25 alt='').me-2
                small Профиль

          div.tab-content(id='nav-tabContent')
            div.tab-pane.fade.show.active(id='contacts' role='tabpanel' aria-labelledby='nav-contacts' tabindex='0')
              

            div.tab-pane.fade(id='chats' role='tabpanel' aria-labelledby='nav-chats' tabindex='0')
              //- include pug_sections/contacts.pug
            div.tab-pane.fade(id='profile' role='tabpanel' aria-labelledby='nav-profile' tabindex='0')

        div.pg-y-3rem.px-4.contacts
          include pug_sections/contacts.pug

        

        
       
          
  
      
      section.col-md-8.visibility-chat.d-flex.justify-content-center.align-items-center.px-0
        include ./pug_sections/avatar.pug
        






