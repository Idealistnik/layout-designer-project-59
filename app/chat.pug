doctype html
html.h-100(lang='ru')
  include pug_sections/head.pug 
  body.h-100.bg-gray
    div.container-new-xxl.p-0.p-sm-4.h-100
      h1.visually-hidden Хекслет раздел чата
      div.row.m-0.bg-white.h-100.radius-sm-1rem
        section.col-lg-4.border-end.px-0.h-100s
          h2.visually-hidden Раздел навигации
          div.tab-content.d-flex.flex-column.h-100(id='nav-tab-content')
            header.bg-primary.radius-left-top-sm-1rem.radius-right-top-sm-1rem.radius-right-top-lg-0.order-1.order-sm-0
              nav             
                div.nav.nav-tabs.align-items-center.p-3(id='nav-tab', role='tablist')

                  a.me-sm-3.me-auto
                    img.me-1.logo-header.svg-white(src='./images/sprite.svg#logo', width=25, alt='Логотип Хекслет')

                  a.nav-link.p-0.link-light.d-sm-none.bg-transparent.border.border-0.me-4.ms-2.my-2(id='current-chat', href='#current-chat', data-bs-toggle='tab', data-bs-target='#nav-current-chat', role='tab', aria-controls='nav-current-chat', aria-selected='false')
                    img.me-sm-2(src='./images/sprite.svg#chat-left-text_1', width=25, alt='Иконка Текущий чат')
                  
                  a.nav-link.p-0.link-light.bg-transparent.border.border-0.me-4.ms-2.my-2(id='contacts', href='#contacts', data-bs-toggle='tab', data-bs-target='#nav-contacts', role='tab', aria-controls='nav-contacts', aria-selected='false')
                    img.me-sm-2.svg-white(src='./images/sprite.svg#people', width=25, alt='Иконка Контакты')
                    small.d-none.d-sm-inline Контакты         
                    
                  a.nav-link.p-0.link-light.active.bg-transparent.border.border-0.me-4.ms-2.my-2(id='chats', href='#chats', data-bs-toggle='tab', data-bs-target='#nav-chats', role='tab', aria-controls='nav-chats', aria-selected='true')
                    img.me-sm-2.svg-white(src='./images/sprite.svg#chat', width=25, alt='Иконка Сообщения')
                    small.d-none.d-sm-inline Сообщения              
                    
                  a.nav-link.p-0.link-light.bg-transparent.border.border-0.ms-2.my-2(id='profile', href='#profile', data-bs-toggle='tab', data-bs-target='#nav-profile', role='tab', aria-controls='nav-profile', aria-selected='false')
                    img.me-sm-2.svg-white(src='./images/sprite.svg#person', width=25, alt='Иконка Профиль')
                    small.d-none.d-sm-inline Профиль 
            
            div.tab-pane.fade.flex-grow-1.h-100.overflow-hidden(id='nav-current-chat', role='tabpanel', aria-labelledby='nav-current-chat', tabindex='0')
              div.current-chat.h-100
                include pug_sections/current_chat.pug 

            div.tab-pane.fade.flex-grow-1.h-100.overflow-hidden(id='nav-contacts', role='tabpanel', aria-labelledby='nav-contacts', tabindex='0')
              div.py-5.px-4.contacts.h-100
                include pug_sections/contacts.pug            

            div.tab-pane.fade.show.active.flex-grow-1.h-100.overflow-hidden(id='nav-chats', role='tabpanel', aria-labelledby='nav-chats', tabindex='0')
              div.py-5.px-4.chats.h-100
                include pug_sections/chats.pug 

            div.tab-pane.fade.flex-grow-1.h-100.overflow-hidden(id='nav-profile', role='tabpanel', aria-labelledby='nav-profile', tabindex='0')
              div.py-5.px-4.profile.h-100
                include pug_sections/profile.pug

        section.col-lg-8.px-0.d-none.d-lg-flex.h-100
          div.current-chat.h-100
            h2.visually-hidden Раздел чата
            include ./pug_sections/current_chat.pug