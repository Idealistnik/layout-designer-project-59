DOCTYPE(html)
html(lang='ru').h-100
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')

  title layout-designer-project-59
  link(rel='stylesheet' href='./styles/app.css')
  link(rel='stylesheet' href='../node_modules/bootstrap/scss/bootstrap')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
 
body.h-100.bg-gray
  div.container-new-xxl.min-vh-100.p-0.p-sm-4.h-100
    div.row.bg-white.h-100.radius-sm-1rem
      section.col-lg-4.border-end.px-0.h-100.overflow-hidden 
        
       

        div.tab-content(id='nav-tabContent')
          header.bg-primary.radius-left-top-sm-1rem.radius-right-top-sm-1rem.radius-right-top-lg-0.header
            nav             
              div.nav.nav-tabs(id='nav-tab' role='tablist').align-items-center.p-3
                a.me-sm-3.me-auto
                  img(src='./images/logo.svg' width=25 height=40 alt='').svg-white.me-1.logo-header
                
                a.nav-link.p-0.link-light.d-sm-none(id='#current-chat' href='#current-chat' data-bs-toggle='tab' data-bs-target='#nav-current-chat' type='button' role='tab' aria-controls='nav-current-chat' aria-selected='false').border.border-0.me-4.ms-2.my-2
                  img(src='./images/chat-left-text_1.svg' width=25 height=25 alt='').me-sm-2
          
                
                a.nav-link.p-0.link-light.bg-transparent(id='#contacts' href='#contacts' data-bs-toggle='tab' data-bs-target='#nav-contacts' type='button' role='tab' aria-controls='nav-contacts' aria-selected='false').border.border-0.me-4.ms-2.my-2
                  img(src='./images/people.svg' width=25 height=25 alt='').me-sm-2.svg-white
                  small.d-none.d-sm-inline Контакты         
                  
                a.nav-link.p-0.link-light.active.bg-transparent(id='#current-chat' href='#current-chat' data-bs-toggle='tab' data-bs-target='#nav-chats' type='button' role='tab' aria-controls='nav-chats' aria-selected='true').border.border-0.me-4.ms-2.my-2
                  img(src='./images/chat.svg' width=25 height=25 alt='').me-sm-2.svg-white
                  small.d-none.d-sm-inline Сообщения              
                  
                a.nav-link.p-0.link-light.bg-transparent(id='#profile' href='#profile' data-bs-toggle='tab' data-bs-target='#nav-profile' type='button' role='tab' aria-controls='nav-profile' aria-selected='false').border.border-0.ms-2.my-2
                  img(src='./images/person.svg' width=25 height=25 alt='').me-sm-2.svg-white
                  small.d-none.d-sm-inline Профиль 


          div.tab-pane.fade(id='nav-current-chat' role='tabpanel' aria-labelledby='nav-current-chat' tabindex='0')
            div.pg-y-3rem.px-4.contacts.h-100
              include pug_sections/current_chat.pug        
          div.tab-pane.fade(id='nav-contacts' role='tabpanel' aria-labelledby='nav-contacts' tabindex='0')
            div.pg-y-3rem.px-4.contacts.h-100
              include pug_sections/contacts.pug            

          div.tab-pane.fade.show.active(id='nav-chats' role='tabpanel' aria-labelledby='nav-chats' tabindex='0')
            div.pg-y-3rem.px-4.chats.h-100
              include pug_sections/chats.pug 
          div.tab-pane.fade(id='nav-profile' role='tabpanel' aria-labelledby='nav-profile' tabindex='0')
            div.pg-y-3rem.px-4.profile.h-100
              include pug_sections/profile.pug
        

      section.col-lg-8.px-0.d-none.d-lg-flex.h-100
        div.current-chat
          include ./pug_sections/current_chat.pug
        






