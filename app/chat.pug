doctype html
html.h-100(lang='ru')
  include pug_sections/head.pug 
  body.h-100.bg-gray
    div.container-xxl.h-100.p-0.p-sm-4
      h1.visually-hidden Хекслет раздел чата
      div.row.h-100.m-0.radius-sm-1rem.bg-white
        section.col-lg-4.h-100.border-end.px-0
          h2.visually-hidden Раздел навигации
          div.tab-content.d-flex.flex-column.h-100(id='nav-tab-content')
            header.radius-left-top-sm-1rem.radius-right-top-sm-1rem.radius-right-top-lg-0.order-1.order-sm-0.bg-primary
              nav.nav.align-items-center(role='tablist')             
                a.me-sm-3.me-auto.my-4.my-sm-3.ms-3
                  img.logo-header.svg-white.me-0.me-sm-1(src='./images/sprite.svg#logo', width=25, alt='Логотип Хекслет')
                a.nav-link.link-light.d-sm-none.bg-transparent.me-4.ms-sm-2.p-0(id='current-chat', href='#current-chat', data-bs-toggle='tab', data-bs-target='#nav-current-chat', role='tab', aria-controls='nav-current-chat', aria-selected='false')
                  img.me-sm-2(src='./images/sprite.svg#chat-left-text_1', width=25, alt='Иконка Текущий чат')
                a.nav-link.link-light.bg-transparent.me-4.ms-3.ms-sm-2.p-0(id='contacts', href='#contacts', data-bs-toggle='tab', data-bs-target='#nav-contacts', role='tab', aria-controls='nav-contacts', aria-selected='false')
                  img.me-sm-2.svg-white(src='./images/sprite.svg#people', width=25, alt='Иконка Контакты')
                  small.d-none.d-sm-inline Контакты         
                a.nav-link.link-light.active.bg-transparent.me-4.ms-3.ms-sm-2.p-0(id='chats', href='#chats', data-bs-toggle='tab', data-bs-target='#nav-chats', role='tab', aria-controls='nav-chats', aria-selected='true')
                  img.me-sm-2.svg-white(src='./images/sprite.svg#chat', width=25, alt='Иконка Сообщения')
                  small.d-none.d-sm-inline Сообщения              
                a.nav-link.link-light.bg-transparent.ms-3.ms-sm-2.me-4.p-0(id='profile', href='#profile', data-bs-toggle='tab', data-bs-target='#nav-profile', role='tab', aria-controls='nav-profile', aria-selected='false')
                  img.me-sm-2.svg-white(src='./images/sprite.svg#person', width=25, alt='Иконка Профиль')
                  small.d-none.d-sm-inline Профиль 
          
            div.tab-pane.fade.overflow-hidden.h-100(id='nav-current-chat', role='tabpanel', aria-labelledby='nav-current-chat', tabindex='0')
              div.h-100.hide-scrollbar
                include pug_sections/current_chat.pug

            div.tab-pane.fade.overflow-hidden.h-100(id='nav-contacts', role='tabpanel', aria-labelledby='nav-contacts', tabindex='0')
              div.h-100.hide-scrollbar.py-5.px-4
                include pug_sections/contacts.pug            

            div.tab-pane.fade.show.active.overflow-hidden.h-100(id='nav-chats', role='tabpanel', aria-labelledby='nav-chats', tabindex='0')
              div.h-100.hide-scrollbar.py-5.px-4
                include pug_sections/chats.pug

            div.tab-pane.fade.overflow-hidden.h-100(id='nav-profile', role='tabpanel', aria-labelledby='nav-profile', tabindex='0')
              div.h-100.hide-scrollbar.py-5.px-4
                include pug_sections/profile.pug

        section.col-lg-8.h-100.d-none.d-lg-flex.px-0
          div.hide-scrollbar
            h2.visually-hidden Раздел чата
            include ./pug_sections/current_chat.pug